@model Login

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<head>
    <link href="~/assets/css/login.css" rel="stylesheet" />
</head>
<table class="nk-table m-10">
    <thead>
        <tr>
            <th colspan="2">Admin Information</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>You Are Logged in as Admin:</th>
            <th>Would you like to:</th>
        </tr>
        <tr>
            <td>@Model.Username</td>
            <td><a class="btn btn-outline-primary" asp-action="CreateAdmin">Create an Admin</a></td>
        </tr>
    </tbody>
</table>

<table class="nk-table m-10">
    <thead>
        <tr>
            <th colspan="9">Users</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Username:</th>
            <th>Password:</th>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>Email:</th>
            <th>View:</th>
            <th>Delete:</th>
            <th>Upgrade:</th>
        </tr>
        @foreach (var u in Model.Users)
        {
            @if (u.Admin == 0)
            {
                <tr>
                    <td>@u.Username</td>
                    <td>@u.Password</td>
                    <td>@u.FirstName</td>
                    <td>@u.LastName</td>
                    <td>@u.EmailAddress</td>
                    <td><a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@u.Id">View User</a></td>
                    <td>
                        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#myModal">
                            Delete User
                        </button>
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                        <h5 class="modal-title text-center" id="exampleModalLabel">Are You Sure?</h5>
                                    </div>
                                    <div class="modal-body text-white text-lg-center">
                                        If you delete this user all of their information will be removed permanently, Do you still wish to delete them?
                                    </div>
                                    <div class="modal-footer">
                                        <div class="left-side">
                                            <button type="button" class="btn btn-default btn-link" data-dismiss="modal">Never mind</button>
                                        </div>
                                        <div class="divider"></div>
                                        <div class="right-side">
                                            <form asp-action="Delete" method="post" asp-route-id="@u.Id">
                                                <button class="btn btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><a class="btn btn-outline-neutral" asp-action="Upgrade" asp-route-id="@u.Id">Upgrade To Admin</a></td>
                </tr>
            }
        }
    </tbody>
</table>

<table class="nk-table m-10">
    <thead>
        <tr>
            <th colspan="7">Admins</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Username:</th>
            <th>Password:</th>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>Email:</th>
            <th>View:</th>
            <th>Delete:</th>
        </tr>
        @foreach (var u in Model.Users)
        {
            @if (u.Admin == 1)
            {
    <tr>
        <td>@u.Username</td>
        <td>@u.Password</td>
        <td>@u.FirstName</td>
        <td>@u.LastName</td>
        <td>@u.EmailAddress</td>
        <td><a class="btn btn-outline-primary" asp-controller="Users" asp-action="Update" asp-route-id="@u.Id">View Admin</a></td>
        @if (Model.UserId != u.Id)
        {
            <td>
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#myModal">
                    Delete Admin
                </button>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                                <h5 class="modal-title text-center" id="exampleModalLabel">Are You Sure?</h5>
                            </div>
                            <div class="modal-body text-white text-lg-center">
                                If you delete this user all of their information will be removed permanently, Do you still wish to delete them?
                            </div>
                            <div class="modal-footer">
                                <div class="left-side">
                                    <button type="button" class="btn btn-default btn-link" data-dismiss="modal">Never mind</button>
                                </div>
                                <div class="divider"></div>
                                <div class="right-side">
                                    <form asp-action="Delete" method="post" asp-route-id="@u.Id">
                                        <button class="btn btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        }
        else
        {
    <td>
        <button type="button" disabled class="btn btn-outline-danger">
            Delete Admin
        </button>
    </td>   
        }
    </tr>
            }
        }
    </tbody>
</table>