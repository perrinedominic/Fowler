@model Users

<!DOCTYPE html>
<head>
    <link href="~/assets/css/login.css" rel="stylesheet" />
</head>
<table class="nk-table">
    <thead>
        <tr>
            <th colspan="3">User Information</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
        <tr>
            <td>@Model.FirstName  @Model.LastName</td>
            <td>@Model.Username</td>
            <td>@Model.EmailAddress</td>
        </tr>
    </tbody>
</table>
<table class="nk-table">
    <thead>
        <tr>
            <th colspan="4">Payment Information</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Card Number</th>
            <th>Expiration</th>
            <th>CVC</th>
            <th>Update</th>
        </tr>
        <tr>
            <td>@Model.CardNumber</td>
            <td>@Model.CardExpire</td>
            <td>@Model.CardCvc</td>
            <td><a class="nk-btn nk-btn-rounded nk-btn-color-main-1" asp-controller="Users" asp-action="UpdateCard" asp-route-id="@Model.Id">Update Card</a></td>
        </tr>
    </tbody>
</table>

<div class="col-11">
    <div class="list">
        @await Html.PartialAsync("~/Views/Shared/_Order.cshtml", Model)
    </div>
</div>
