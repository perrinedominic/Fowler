@model Login

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    
</head>
<style type="text/css">
    .error {
        color: red;
    }

    .nk-page-background-bottom {
        display: none;
    }

    footer {
        display: none;
    }
</style>

<div class="form-container mx-auto mt-100">
    <h4 class="my-2"><span class="text-main-1">Sign</span> In</h4>

    <form asp-action="Validate" method="post" class="nk-form text-white">
        <div class="row vertical-gap">
            <div class="col-md-6">
                @if (Model != null)
                {
                    <span class="error">@Model.ErrorMessage</span>
                }
                <span class="subtitle">USERNAME:</span>
                <br>
                <input type="text" name="username" value="" asp-for="Username" />
                <br>
                <span class="subtitle">PASSWORD:</span>
                <br>
                <input type="password" name="password" value="" asp-for="Password" />
                <br><br>
            </div>
        </div>

        <div class="nk-gap-1"></div>
        <div class="row vertical-gap">
            <div class="col-4">
                <button class="btn btn-outline-primary" type="submit">Login</button>
            </div>
            <div class="col-8">
                <a class="btn btn-outline-secondary" asp-action="Create">Create an Account</a>
            </div>
        </div>
    </form>
</div>
