                    <div class="nk-feature-icon">
                        <img src="assets/images/icon-mouse.png" alt="">
                    </div>
                    <div class="nk-feature-cont">
                        <h3 class="nk-feature-title">@Html.ActionLink("PC", "Filter", "Games", new { platform = "PC", lowPrice = 0, highPrice = 500 }, null)</h3>
                        <h4 class="nk-feature-title text-main-1">@Html.ActionLink("Games", "Filter", "Games", new { platform = "PC", lowPrice = 0, highPrice = 500 }, null)</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="nk-feature-1">
                    <div class="nk-feature-icon">
                        <img src="assets/images/icon-gamepad.png" alt="">
                    </div>
                    <div class="nk-feature-cont">
                        
                        <h3 class="nk-feature-title">@Html.ActionLink("PlayStation", "Filter", "Games", new { platform = "PlayStation", lowPrice = 0, highPrice = 500 }, null)</h3>
                        <h4 class="nk-feature-title text-main-1">@Html.ActionLink("Games", "Filter", "Games", new { platform = "PlayStation", lowPrice = 0, highPrice = 500 }, null)</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="nk-feature-1">
                    <div class="nk-feature-icon">
                        <img src="assets/images/icon-gamepad-2.png" alt="">
                    </div>
                    <div class="nk-feature-cont">
                        <h3 class="nk-feature-title">@Html.ActionLink("Xbox", "Filter", "Games", new { platform = "Xbox", lowPrice = 0, highPrice = 500 }, null)</h3>
                        <h4 class="nk-feature-title text-main-1">@Html.ActionLink("Games", "Filter", "Games", new { platform = "Xbox", lowPrice = 0, highPrice = 500 }, null)</h4>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: Categories -->
        <!-- START: Latest Additions -->
        <div class="nk-gap-2"></div>
        <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Latest</span> Additions</span></h3>
        @*<div class="nk-gap"></div>*@

        <div class="nk-gap-2"></div>
        <div class="nk-blog-grid">
            <div class="row">

            @for (var count = Model.Count()-1; count > Model.Count() - 5; count--)
            {
                <div class="col-md-6 col-lg-3">
                    <!-- START: Post -->
                    <div class="nk-blog-post">
                        <a href="blog-article.html" class="nk-post-img">
                            <img src="@Url.Content(Model.ElementAt(count).imagePath)" alt="@Url.Content(Model.ElementAt(count).Name)">
                            <span class="nk-post-comments-count">13</span>

                            <span class="nk-post-categories">
                                <span class="bg-main-5">@Url.Content(Model.ElementAt(count).Genre)</span>
                            </span>

                        </a>
                        <div class="nk-gap"></div>
                        <h2 class="nk-post-title h4"><a href="blog-article.html">@Url.Content(Model.ElementAt(count).Name)</a></h2>
                        <div class="nk-post-text">
                            <p>@Url.Content(Model.ElementAt(count).Description)</p>
                        </div>
                        <div class="nk-gap"></div>
                        <a href="#" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">View Details</a>
                    </div>
                    <!-- END: Post -->
                </div>
            }

            </div>
        </div>
        <!-- END: Latest Additions -->
        
        <!-- START: Best Selling -->
        <div class="nk-gap-3"></div>
        <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Best</span> Selling</span></h3>
        <div class="nk-gap"></div>
        <div class="row vertical-gap">

            @for (int i = 0; i < 4; i++)
            {
                Model.ElementAt(i);
                <div class="col-md-6">
                    <div class="nk-product-cat">
                        <a class="nk-product-image" asp-action="StoreProduct">
                            <img src="@Url.Content(Model.ElementAt(i).imagePath)" alt="@Model.ElementAt(i).Name">
                        </a>
                        <div class="nk-product-cont">
                            <h3 class="nk-product-title h5"><a asp-action="StoreProduct">@Model.ElementAt(i).Name</a></h3>
                            <div class="nk-gap-1"></div>
                            <div class="nk-product-rating" data-rating="3"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="far fa-star"></i> <i class="far fa-star"></i></div>
                            <div class="nk-gap-1"></div>
                            <div class="nk-product-price">$@Model.ElementAt(i).Price</div>
                            <div class="nk-gap-1"></div>
                            <a href="#" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        <!-- END: Best Selling -->
    </div>

</div>

